<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="file">
    <select id="selectByParentsId" resultType="com.end2end.spring.file.dto.FileDTO">
        SELECT *
        FROM FILES
        INNER JOIN FILE_DETAIL
        ON FILES.ID = FILE_DETAIL.ID
        WHERE ${column} =
        <choose>
            <when test="column.equals('approvalId')">
                #{id}
            </when>
            <otherwise>
                ${id}
            </otherwise>
        </choose>
    </select>

    <select id="selectById" resultType="com.end2end.spring.file.dto.FileDTO">
        SELECT * FROM FILE_DETAIL WHERE id = ${id}
    </select>

    <insert id="insert">
        INSERT INTO FILES(id, messageId, boardId, approvalId, reportId) VALUES (FILES_ID_SEQ.NEXTVAL, ${messageId}, ${boardId}, #{approvalId}, ${reportId}, ${mailId})
        )
        <selectKey keyProperty="id" resultType="int" order="AFTER">
            SELECT FILES_ID_SEQ.CURRVAL FROM DUAL
        </selectKey>
    </insert>

    <insert id="detailInsert">
        INSERT INTO FILE_DETAIL VALUES (FILE_DETAIL_SEQ_ID.NEXTVAL, ${fliesId}, #{originFileName}, #{systemFileName}, #{path}, ${fileSize})
    </insert>

    <insert id="detailInsertAll">
        INSERT INTO FILE_DETAIL(id, filesId, originFileName, systemFileName, path, fileSize)
        SELECT FILE_DETAIL_SEQ_ID.NEXTVAL, A* FROM (
        <foreach collection="list" item="item" separator="UNION ALL">
            SELECT ${item.filesId}, #{item.originFileName}, #{item.systemFileName}, #{item.path}, ${item.fileSize} FROM DUAL
        </foreach>
        ) A
    </insert>

    <delete id="deleteById">
        DELETE FROM FILE_DETAIL WHERE id = ${id}
    </delete>

    <delete id="deleteAll">
        DELETE FROM FILES WHERE ${column} =
        <choose>
            <when test="column.equals('approvalId')">
                #{id}
            </when>
            <otherwise>
                ${id}
            </otherwise>
        </choose>
    </delete>
</mapper>